<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="몸BTI"
        android:textColor="@color/black"
        android:textSize="52sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나의 몸BTI 검사 결과"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_tier_title"
        app:layout_constraintTop_toTopOf="@id/tv_tier_title" />


    <TextView
        android:id="@+id/tv_result_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="몸BTI"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/tv_result_title"
        app:layout_constraintStart_toStartOf="@id/tv_result_title"
        app:layout_constraintTop_toBottomOf="@id/tv_result_title" />

    <ImageView
        android:id="@+id/iv_mbti"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="@id/tv_result_title"
        app:layout_constraintStart_toStartOf="@id/tv_result_title"
        app:layout_constraintTop_toBottomOf="@id/tv_result_title_content"
        tools:src="@drawable/bear" />

    <TextView
        android:id="@+id/tv_tier_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="나의 운동 티어"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tv_result_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <TextView
        android:id="@+id/tv_tier_title_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="티어"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/tv_tier_title"
        app:layout_constraintStart_toStartOf="@id/tv_tier_title"
        app:layout_constraintTop_toBottomOf="@id/tv_tier_title" />

    <ImageView
        android:id="@+id/iv_tier"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="@id/tv_tier_title"
        app:layout_constraintStart_toStartOf="@id/tv_tier_title"
        app:layout_constraintTop_toBottomOf="@id/tv_tier_title_content"
        tools:src="@drawable/platinum" />

    <TextView
        android:id="@+id/tv_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="@id/tv_result_title"
        app:layout_constraintStart_toStartOf="@id/tv_tier_title"
        app:layout_constraintTop_toBottomOf="@id/iv_tier"
        tools:text="adfasdfasdfsa\nadfasdfasdf\ndfadsfsadf" />


</androidx.constraintlayout.widget.ConstraintLayout>